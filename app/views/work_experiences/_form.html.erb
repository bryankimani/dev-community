<%= form_with model: @work_experience, method: :post do |form| %>
    <div class="modal-body">
        <div class="row">
            <% if @work_experience.errors.any? %>
                <div class="error-area" style="color:red;">
                    <h3><% pluralize(@work_experience.errors.count, 'error') %> prohibited your work experience from being
                    saved.</h3>
                    <ul>
                        <% @work_experience.errors.each do |error| %>
                            <li><%= error.full_message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="col-lg-12">
                <div class="form-group">
                    <label class="form-label mb-2 mt-3">
                        Job title
                        <span class="text-danger">*</span>
                    </label>
                    <%= form.text_field :job_title, class: "form-control" %>
                </div>

                <div class="form-group">
                    <label class="form-label mb-2 mt-3">
                        Company
                        <span class="text-danger">*</span>
                    </label>
                    <%= form.text_field :company, class: "form-control" %>
                </div>

                <div class="form-group">
                    <label class="form-label mb-2 mt-3">
                        Employment Type
                        <span class="text-danger">*</span>
                    </label>
                    <%= form.select :employment_type,
                        options_for_select(WorkExperience::EMPLOYMENT_TYPE),
                        { prompt: 'Select employment type' },
                        { class: "form-select" }
                    %>
                </div>

                <div class="form-group">
                    <label class="form-label mb-2 mt-3">
                        Location
                        <span class="text-danger">*</span>
                    </label>
                    <%= form.text_field :location, class: "form-control" %>
                </div>

                <div class="form-group">
                    <label class="form-label mb-2 mt-3">
                        Location Type
                        <span class="text-danger">*</span>
                    </label>
                    <%= form.select :location_type,
                        options_for_select(WorkExperience::LOCATION_TYPE),
                        { prompt: 'Select location type' },
                        { class: "form-select" }
                    %>
                </div>

                <div class="form-group row">
                    <div class="col-lg-6">
                        <label class="form-label mb-2 mt-3">
                            Start Date
                            <span class="text-danger">*</span>
                        </label>
                        <%= form.date_field :start_date, class: "form-control" %>
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label mb-2 mt-3">
                            End Date
                            <span class="text-danger">*</span>
                        </label>
                        <%= form.date_field :end_date, class: "form-control" %>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-check form-switch mb-2 mt-3">
                            <%= form.check_box :currently_working_here, class: "form-check-input", role: "switch" %>
                            <label class="form-check-label">I am currently working here</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label mb-2 mt-3">Description</label>
                    <%= form.text_area :description, class: "form-control", rows: 5 %>
                </div>

            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" data-action="click->bootstrap-modal#submitEnd">Close</button>
        <%= form.submit 'Save Changes', class: 'btn btn-primary', data: { action: 'click->bootstrap-modal#submitEnd'} %>
    </div>
<% end %>
