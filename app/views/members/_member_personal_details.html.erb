<div class="card mb-5" id="member-personal-details">
    <div class="row">
        <div class="col-lg-4">
            <%= image_tag "user.png", class: "img-fluid" %>
        </div>
        <div class="col-lg-8">
            <div class="card-body">
                <% if user_signed_in? && user == current_user %>
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-end">
                            <%= link_to edit_personal_details_members_path, data: { controller: "edit-user-personal-details" } do %>
                                <i class="bi bi-pencil-fill"></i>
                            <% end %>
                        </div>
                    </div>
                <% end %>
                <h3 class="fw-bold"><%= user.full_name %> </h3>
                <p class="lead"><%= user.profile_title  %> </p>
                <p class="lead text-primary"><%= user.address  %> </p>
            </div>
        </div>
    </div>
</div>
